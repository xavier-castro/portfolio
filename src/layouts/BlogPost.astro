---
import BaseHead from '../components/Head/BaseHead.astro'
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
import Body from '../components/Body.astro'
import Content from '../components/Content.astro'

export interface Props {
  content: {
    title: string
    description: string
    pubDate?: string
    updatedDate?: string
    heroImage?: string
  }
}

const {
  content: { title, description, heroImage }
} = Astro.props
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead title={title} description={description} image={heroImage} />
  </head>

  <Body>
    <Header />
    <main class="pt-[56px]">
      <Content className="py-6">
        <article>
          <!-- HeroImage -->
          {
            heroImage && (
              <img
                class="border border-slate-300 dark:border-zinc-700 rounded-xl"
                width={720}
                height={360}
                src={heroImage}
                alt=""
              />
            )
          }
          <!-- Header -->
          <h1 class="text-3xl my-1 font-mplus">{title}</h1>
          <div>{description}</div>
          <!-- Line separator -->
          <hr class="border-top border-zinc-400 my-4" />

          <!-- Where the text content is at -->
          <slot />
          <hr class="border-top border-zinc-400 my-4" />

          <!-- Orange highlight hover -->
          <span
            class="underline underline-offset-2 hover:text-orange-500 decoration-orange-500 text-2xl"
          >
            <a href="#top">Back to top</a>
          </span>
        </article>
      </Content>
    </main>
    <Footer />
  </Body>
</html>
