  <Body>
    <Nav />
    <main class="pt-[56px]">
      <Hero title={SITE_TITLE} />
      <Content>
        <section>
          <h1 class="text-3xl text-center font-mplus mt-12 mb-8">
            Oops, not found
          </h1>
          <div class="text-center py-4">
            <a
              class="inline-flex items-center gap-1 underline underline-offset-2 decoration-orange-500"
              href="/"
              >Go to Index <IoChevronForward />
            </a>
          </div><a href="/"> </a>
        </section><a href="/"> </a><a href="/"> </a>
      </Content>
    </main><a href="/">
      <Footer />
    </a><a href="/"> </a>
  </Body>
</html>
